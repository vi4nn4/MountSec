echo "Starting update Feeds of OpenVas - 1 of 3 update feeds..."
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
echo "Upate - 1 - Updating OpenVas Feeds-CERTs"
greenbone-certdata-sync
echo "Update Feeds-CERTs completed"
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
echo "Updating OpenVas Feeds-SCAP (CVEs e CPEs)"
greenbone-scapdata-sync
echo "Update Feeds-SCAP completed"
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
echo "Updating OpenVas Templates of Policy compliance, Port List and Scan config"
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
sudo -u gvm greenbone-feed-sync --type GVMD_DATA
echo "Update Feeds-Templates of Policy compliance, Port List and Scan config completed"
sleep 1
echo "."
sleep 1
echo ".."
sleep 1
echo "..."
echo "All your Feeds already Updated"
